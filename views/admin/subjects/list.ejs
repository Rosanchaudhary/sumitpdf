<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Subjects - Semester <%= semester.number %></title>
  <link rel="stylesheet" href="/stylesheets/admin.css">
</head>
<body>
  <div class="admin-container">
    <header class="admin-header">
      <h1>Manage Subjects</h1>
      <nav>
        <a href="/admin">Dashboard</a>
        <a href="/admin/degrees/<%= semester.engineeringDegree._id %>/semesters">Back to Semesters</a>
      </nav>
    </header>

    <main class="admin-main">
      <div class="breadcrumb">
        <a href="/admin">Dashboard</a> /
        <a href="/admin/degrees">Degrees</a> /
        <a href="/admin/degrees/<%= semester.engineeringDegree._id %>/semesters">
          <%= semester.engineeringDegree.name %>
        </a> /
        <span>Semester <%= semester.number %></span>
      </div>

      <div class="page-header">
        <h2>Subjects for Semester <%= semester.number %> - <%= semester.name %></h2>
        <a href="/admin/semesters/<%= semester._id %>/subjects/new" class="btn btn-primary">
          + Add New Subject
        </a>
      </div>

      <div class="table-container">
        <% if (subjects.length === 0) { %>
          <p class="empty-state">
            No subjects added yet. 
            <a href="/admin/semesters/<%= semester._id %>/subjects/new">Add the first subject</a>
          </p>
        <% } else { %>
          <table class="data-table">
            <thead>
              <tr>
                <th>Subject Name</th>
                <th>Subject Code</th>
                <th>Notes</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% subjects.forEach(subject => { %>
                <tr>
                  <td><strong><%= subject.name %></strong></td>
                  <td><%= subject.code || '-' %></td>
                  <td><%= subject.notes.length %></td>
                  <td class="actions">
                    <a href="/admin/subjects/<%= subject._id %>/notes" class="btn btn-sm">View Notes</a>
                    <a href="/admin/subjects/<%= subject._id %>/edit" class="btn btn-sm btn-secondary">Edit</a>
                    <form action="/admin/subjects/<%= subject._id %>/delete" method="POST" style="display: inline;" 
                          onsubmit="return confirm('Are you sure? This will delete all notes under this subject.');">
                      <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        <% } %>
      </div>
    </main>
  </div>
</body>
</html>
