<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Note - Admin</title>
  <link rel="stylesheet" href="/stylesheets/admin.css">
</head>
<body>
  <div class="admin-container">
    <header class="admin-header">
      <h1>Edit Note</h1>
      <nav>
        <a href="/admin">Dashboard</a>
        <a href="/admin/subjects/<%= note.subject._id %>/notes">Back to Notes</a>
      </nav>
    </header>

    <main class="admin-main">
      <div class="breadcrumb">
        <a href="/admin">Dashboard</a> /
        <a href="/admin/degrees">Degrees</a> /
        <a href="/admin/degrees/<%= note.subject.semester.engineeringDegree._id %>/semesters">
          <%= note.subject.semester.engineeringDegree.name %>
        </a> /
        <a href="/admin/semesters/<%= note.subject.semester._id %>/subjects">
          Semester <%= note.subject.semester.number %>
        </a> /
        <a href="/admin/subjects/<%= note.subject._id %>/notes"><%= note.subject.name %></a> /
        <span>Edit Note</span>
      </div>

      <div class="form-container">
        <h2>Edit "<%= note.title %>"</h2>
        
        <form action="/admin/notes/<%= note._id %>/edit" method="POST" enctype="multipart/form-data">
          <div class="form-group">
            <label for="title">Note Title *</label>
            <input 
              type="text" 
              id="title" 
              name="title" 
              value="<%= note.title %>"
              required 
              placeholder="e.g., Chapter 1 - Introduction to Thermodynamics"
            >
          </div>

          <div class="form-group">
            <label for="author">Author *</label>
            <input 
              type="text" 
              id="author" 
              name="author" 
              value="<%= note.author %>"
              required 
              placeholder="e.g., Prof. John Smith"
            >
          </div>

          <div class="form-group">
            <label>Current PDF File</label>
            <div class="current-file">
              <a href="<%= note.pdfUrl %>" target="_blank" class="btn btn-sm">View Current PDF</a>
            </div>
          </div>

          <div class="form-group">
            <label for="pdfFile">Replace PDF File (Optional, Max 10MB)</label>
            <input 
              type="file" 
              id="pdfFile" 
              name="pdfFile" 
              accept=".pdf"
            >
            <small>Leave empty to keep the current file. Only PDF files are allowed. Maximum file size: 10MB</small>
          </div>

          <div class="form-actions">
            <button type="submit" class="btn btn-primary">Update Note</button>
            <a href="/admin/subjects/<%= note.subject._id %>/notes" class="btn btn-secondary">Cancel</a>
          </div>
        </form>
      </div>
    </main>
  </div>

  <script>
    // File size validation
    document.getElementById('pdfFile').addEventListener('change', function(e) {
      const file = e.target.files[0];
      if (file) {
        const fileSize = file.size / 1024 / 1024; // in MB
        if (fileSize > 10) {
          alert('File size exceeds 10MB. Please choose a smaller file.');
          e.target.value = '';
        }
      }
    });
  </script>
</body>
</html>
