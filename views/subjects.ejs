<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Semester <%= semester.number %> - Subjects</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700;900&family=Work+Sans:wght@400;500;600&display=swap" rel="stylesheet">
  <script>
    tailwind.config = {
      theme: {
        extend: {
          fontFamily: {
            'playfair': ['Playfair Display', 'serif'],
            'work': ['Work Sans', 'sans-serif'],
          },
          colors: {
            primary: '#667eea',
            'primary-dark': '#5a67d8',
            secondary: '#764ba2',
            accent: '#f093fb',
          },
          animation: {
            'fadeInUp': 'fadeInUp 0.6s ease-out backwards',
            'slideDown': 'slideDown 0.5s ease-out',
          },
          keyframes: {
            fadeInUp: {
              '0%': { opacity: '0', transform: 'translateY(30px)' },
              '100%': { opacity: '1', transform: 'translateY(0)' },
            },
            slideDown: {
              '0%': { transform: 'translateY(-100%)' },
              '100%': { transform: 'translateY(0)' },
            },
          },
        }
      }
    }
  </script>
  <style>
    body {
      font-family: 'Work Sans', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    }
    
    .gradient-text {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }
    
    .gradient-bg {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }
    
    .hero-gradient-overlay {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100vh;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      opacity: 0.05;
      pointer-events: none;
      z-index: 0;
    }
  </style>
</head>
<body class="bg-gray-50 text-gray-900 overflow-x-hidden">
  <!-- Hero Gradient Background -->
  <div class="hero-gradient-overlay"></div>
  
  <!-- Navbar -->
  <nav class="bg-white shadow-sm sticky top-0 z-50 animate-slideDown">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-5 flex justify-between items-center">
      <a href="/" class="font-playfair text-xl sm:text-2xl lg:text-3xl font-black gradient-text hover:scale-105 transition-transform">
        üìö Engineering Notes
      </a>
      <a href="/admin" class="px-4 sm:px-6 py-2.5 gradient-bg text-white rounded-lg font-semibold text-sm sm:text-base hover:-translate-y-0.5 hover:shadow-md transition-all">
        Admin Panel
      </a>
    </div>
  </nav>

  <!-- Main Container -->
  <main class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 sm:py-12 pb-16 sm:pb-20">
    <!-- Breadcrumb -->
    <div class="mb-6 sm:mb-8 text-sm sm:text-base text-gray-500 flex items-center flex-wrap gap-2 animate-fadeInUp">
      <a href="/" class="text-primary hover:text-primary-dark hover:underline transition-colors">
        Home
      </a>
      <span class="opacity-50">/</span>
      <a href="/degrees/<%= degree._id %>" class="text-primary hover:text-primary-dark hover:underline transition-colors">
        <%= degree.name %> Engineering
      </a>
      <span class="opacity-50">/</span>
      <span class="text-gray-900 font-medium">Semester <%= semester.number %></span>
    </div>

    <!-- Page Header -->
    <header class="text-center mb-12 sm:mb-16 animate-fadeInUp">
      <h1 class="font-playfair text-3xl sm:text-4xl lg:text-6xl font-black mb-4 gradient-text leading-tight">
        Semester <%= semester.number %>: <%= semester.name %>
      </h1>
      <p class="text-lg sm:text-xl text-gray-600 font-normal">
        Choose a subject to view available notes
      </p>
    </header>

    <!-- Empty State -->
    <% if (subjects.length === 0) { %>
      <div class="text-center py-16 sm:py-20 bg-white rounded-2xl shadow-sm animate-fadeInUp">
        <div class="text-7xl sm:text-8xl mb-6 opacity-50">üìö</div>
        <h2 class="text-2xl sm:text-3xl font-bold text-gray-900 mb-3">No Subjects Available</h2>
        <p class="text-base sm:text-lg text-gray-600 mb-8 px-4">
          Subjects for Semester <%= semester.number %> will appear here once they are added.
        </p>
        <a href="/degrees/<%= degree._id %>" class="inline-block px-6 sm:px-8 py-3 sm:py-4 bg-white text-primary border-2 border-primary rounded-xl font-semibold hover:bg-primary hover:text-white transition-all text-sm sm:text-base">
          ‚Üê Back to Semesters
        </a>
      </div>
    
    <!-- Subjects Grid -->
    <% } else { %>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 sm:gap-6">
        <% subjects.forEach((subject, index) => { %>
          <a 
            href="/subjects/<%= subject._id %>" 
            class="group bg-white rounded-xl p-6 sm:p-8 shadow-sm hover:shadow-lg hover:-translate-y-1 transition-all duration-300 flex flex-col gap-5 sm:gap-6 animate-fadeInUp"
            style="animation-delay: <%= index * 0.07 %>s"
          >
            <!-- Subject Header -->
            <div class="flex-1">
              <h3 class="text-xl sm:text-2xl font-semibold text-gray-900 mb-3 leading-snug">
                <%= subject.name %>
              </h3>
              <% if (subject.code) { %>
                <span class="inline-block px-3 sm:px-3.5 py-1.5 sm:py-2 bg-gray-50 text-primary rounded-lg text-xs sm:text-sm font-semibold border border-gray-200">
                  <%= subject.code %>
                </span>
              <% } %>
            </div>

            <!-- Subject Footer -->
            <div class="flex justify-between items-center pt-4 border-t border-gray-200">
              <span class="flex items-center gap-2 text-gray-600 text-sm sm:text-base font-medium">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-primary flex-shrink-0">
                  <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                  <polyline points="14 2 14 8 20 8"></polyline>
                </svg>
                <%= subject.notes.length %> Note<%= subject.notes.length !== 1 ? 's' : '' %>
              </span>
              <div class="text-2xl text-primary group-hover:translate-x-1 transition-transform">
                ‚Üí
              </div>
            </div>
          </a>
        <% }) %>
      </div>
    <% } %>
  </main>

  <!-- Footer -->
  <footer class="text-center py-12 px-4 text-gray-500 text-sm sm:text-base mt-12">
    <p>Engineering Notes Library &copy; 2026</p>
  </footer>
</body>
</html>
