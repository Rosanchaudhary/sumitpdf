<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= note.title %> - PDF Viewer</title>

  <!-- Tailwind -->
  <script src="https://cdn.tailwindcss.com"></script>

  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700;900&family=Work+Sans:wght@400;500;600&display=swap" rel="stylesheet" />

  <!-- pdf.js -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/pdf.js/3.11.174/pdf.min.js"></script>

  <script>
    tailwind.config = {
      theme: {
        extend: {
          fontFamily: {
            playfair: ['Playfair Display', 'serif'],
            work: ['Work Sans', 'sans-serif'],
          },
          colors: {
            primary: '#667eea',
            'primary-dark': '#5a67d8',
            secondary: '#764ba2',
          },
        },
      },
    };
  </script>

  <style>
    body {
      font-family: 'Work Sans', system-ui, -apple-system, BlinkMacSystemFont;
      margin: 0;
      overflow: hidden;
    }

    .gradient-bg {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }
  </style>
</head>

<body class="m-0 overflow-hidden">
  <div class="flex flex-col h-screen">

    <!-- HEADER -->
    <div class="gradient-bg text-white px-4 sm:px-8 py-4 shadow-lg z-10">
      <div class="max-w-7xl mx-auto flex flex-col lg:flex-row justify-between gap-4">

        <div class="flex-1 min-w-0">
          <!-- Breadcrumb -->
          <div class="text-xs sm:text-sm opacity-85 mb-2 whitespace-nowrap overflow-x-auto">
            <a href="/" class="opacity-80 hover:underline">Home</a> /
            <a href="/degrees/<%= degree._id %>" class="opacity-80 hover:underline"><%= degree.name %></a> /
            <a href="/semesters/<%= semester._id %>" class="opacity-80 hover:underline">Sem <%= semester.number %></a> /
            <a href="/subjects/<%= subject._id %>" class="opacity-80 hover:underline"><%= subject.name %></a>
          </div>

          <h1 class="font-playfair text-xl sm:text-2xl lg:text-3xl font-bold truncate">
            <%= note.title %>
          </h1>

          <div class="flex gap-6 text-xs sm:text-sm opacity-90 mt-1">
            <span>üìù <%= note.author %></span>
            <span>üìÖ <%= new Date(note.uploadDate).toLocaleDateString() %></span>
          </div>
        </div>
      </div>
    </div>

    <!-- PDF VIEWER -->
    <div
      id="pdf-viewer"
      class="flex-1 overflow-y-auto bg-gray-700 p-6 space-y-8"
    >
      <!-- Pages injected here -->
    </div>

  </div>

  <!-- PDF LAZY LOAD SCRIPT -->
  <script>
    const pdfUrl = "<%= note.pdfUrl %>";
    const viewer = document.getElementById("pdf-viewer");

    pdfjsLib.GlobalWorkerOptions.workerSrc =
      "https://cdnjs.cloudflare.com/ajax/libs/pdf.js/3.11.174/pdf.worker.min.js";

    pdfjsLib.getDocument(pdfUrl).promise.then(pdf => {
      const totalPages = pdf.numPages;

      for (let pageNum = 1; pageNum <= totalPages; pageNum++) {
        const wrapper = document.createElement("div");
        wrapper.className = "flex justify-center";
        wrapper.dataset.page = pageNum;

        const skeleton = document.createElement("div");
        skeleton.className =
          "w-full max-w-4xl h-[900px] bg-gray-600 animate-pulse rounded-xl";

        wrapper.appendChild(skeleton);
        viewer.appendChild(wrapper);

        observePage(pdf, wrapper, pageNum);
      }
    });

    function observePage(pdf, container, pageNum) {
      const observer = new IntersectionObserver(
        async entries => {
          if (!entries[0].isIntersecting) return;

          observer.disconnect();

          const page = await pdf.getPage(pageNum);
          const viewport = page.getViewport({ scale: getScale() });

          const canvas = document.createElement("canvas");
          const ctx = canvas.getContext("2d");

          canvas.width = viewport.width;
          canvas.height = viewport.height;
          canvas.className = "bg-white rounded-xl shadow-2xl";

          container.innerHTML = "";
          container.appendChild(canvas);

          page.render({
            canvasContext: ctx,
            viewport,
          });
        },
        { rootMargin: "400px" }
      );

      observer.observe(container);
    }

    function getScale() {
      if (window.innerWidth < 640) return 1.1;   // mobile
      if (window.innerWidth < 1024) return 1.3;  // tablet
      return 1.6;                                // desktop
    }
  </script>
</body>
</html>
