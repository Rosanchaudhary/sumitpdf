<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Engineering Notes - Choose Your Degree</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700;900&family=Work+Sans:wght@400;500;600&display=swap" rel="stylesheet">
  <script>
    tailwind.config = {
      theme: {
        extend: {
          fontFamily: {
            'playfair': ['Playfair Display', 'serif'],
            'work': ['Work Sans', 'sans-serif'],
          },
          colors: {
            primary: '#667eea',
            'primary-dark': '#5a67d8',
            secondary: '#764ba2',
            accent: '#f093fb',
          },
          animation: {
            'fadeInUp': 'fadeInUp 0.6s ease-out backwards',
            'slideDown': 'slideDown 0.5s ease-out',
            'bounce-slow': 'bounce 2s infinite',
          },
          keyframes: {
            fadeInUp: {
              '0%': { opacity: '0', transform: 'translateY(30px)' },
              '100%': { opacity: '1', transform: 'translateY(0)' },
            },
            slideDown: {
              '0%': { transform: 'translateY(-100%)' },
              '100%': { transform: 'translateY(0)' },
            },
          },
        }
      }
    }
  </script>
  <style>
    body {
      font-family: 'Work Sans', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    }
    
    .gradient-text {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }
    
    .gradient-bg {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }
    
    .gradient-bg-light {
      background: linear-gradient(135deg, rgba(102, 126, 234, 0.1), rgba(118, 75, 162, 0.1));
    }
    
    .hero-gradient-overlay {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100vh;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      opacity: 0.05;
      pointer-events: none;
      z-index: 0;
    }
    
    .top-border-gradient::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 4px;
      background: linear-gradient(90deg, #667eea, #764ba2);
      transform: scaleX(0);
      transform-origin: left;
      transition: transform 0.4s;
    }
    
    .top-border-gradient:hover::before {
      transform: scaleX(1);
    }
  </style>
</head>
<body class="bg-gray-50 text-gray-900 overflow-x-hidden">
  <!-- Hero Gradient Background -->
  <div class="hero-gradient-overlay"></div>
  
  <!-- Navbar -->
  <nav class="bg-white shadow-sm sticky top-0 z-50 animate-slideDown">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-5 flex justify-between items-center">
      <a href="/" class="font-playfair text-2xl sm:text-3xl font-black gradient-text hover:scale-105 transition-transform">
        ðŸ“š Engineering Notes
      </a>

    </div>
  </nav>

  <!-- Main Container -->
  <main class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 sm:py-12 pb-16 sm:pb-20">
    <!-- Page Header -->
    <header class="text-center mb-12 sm:mb-16 animate-fadeInUp">
      <h1 class="font-playfair text-4xl sm:text-5xl lg:text-6xl font-black mb-4 gradient-text leading-tight">
        Choose Your Engineering Path
      </h1>
      <p class="text-lg sm:text-xl text-gray-600 font-normal">
        Access comprehensive notes for your degree program
      </p>
    </header>

    <!-- Empty State -->
    <% if (degrees.length === 0) { %>
      <div class="text-center py-16 sm:py-20 bg-white rounded-2xl shadow-sm animate-fadeInUp">
        <div class="text-7xl sm:text-8xl mb-6 opacity-50">ðŸ“–</div>
        <h2 class="text-2xl sm:text-3xl font-bold text-gray-900 mb-3">No Degrees Available Yet</h2>
        <p class="text-base sm:text-lg text-gray-600 mb-8 px-4">
          Engineering programs will appear here once they are added by administrators.
        </p>
        <a href="/admin" class="inline-block px-6 sm:px-8 py-3 sm:py-4 gradient-bg text-white rounded-xl font-semibold shadow-md hover:-translate-y-0.5 hover:shadow-lg transition-all text-sm sm:text-base">
          Go to Admin Panel
        </a>
      </div>
    
    <!-- Degrees Grid -->
    <% } else { %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 sm:gap-8">
        <% degrees.forEach((degree, index) => { %> 
          <a 
            href="/degrees/<%= degree._id %>" 
            class="group relative bg-white rounded-2xl p-8 sm:p-10 shadow-md hover:shadow-2xl hover:-translate-y-2 transition-all duration-300 overflow-hidden top-border-gradient animate-fadeInUp"
            style="animation-delay: <%= index * 0.1 %>s"
          >
            <!-- Degree Icon -->
            <div class="text-5xl sm:text-6xl mb-6 animate-bounce-slow">
              <% 
                const icons = {
                  'Civil': 'ðŸ—ï¸',
                  'Electrical': 'âš¡',
                  'Mechanical': 'âš™ï¸',
                  'Computer': 'ðŸ’»',
                  'Electronics': 'ðŸ”Œ',
                  'Chemical': 'ðŸ§ª',
                  'Aerospace': 'âœˆï¸',
                  'Other': 'ðŸ“'
                };
                const icon = icons[degree.name] || 'ðŸ“š';
              %>
              <%= icon %>
            </div>

            <!-- Degree Name -->
            <h2 class="font-playfair text-2xl sm:text-3xl font-bold mb-2 text-gray-900">
              <%= degree.name %> Engineering
            </h2>

            <!-- Degree Code -->
            <% if (degree.shortName) { %>
              <span class="inline-block px-4 py-2 gradient-bg-light text-primary rounded-lg text-sm font-semibold mb-6">
                <%= degree.shortName %>
              </span>
            <% } %>

            <!-- Degree Stats -->
            <div class="mt-6 pt-6 border-t border-gray-200">
              <span class="inline-flex items-center gap-2 text-gray-600 text-sm sm:text-base">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-primary flex-shrink-0">
                  <path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"></path>
                  <path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"></path>
                </svg>
                <%= degree.semesters.length %> Semester<%= degree.semesters.length !== 1 ? 's' : '' %>
              </span>
            </div>

            <!-- Arrow -->
            <div class="absolute bottom-8 right-8 text-3xl text-primary group-hover:translate-x-1 transition-transform">
              â†’
            </div>
          </a>
        <% }) %>
      </div>
    <% } %>
  </main>

  <!-- Footer -->
  <footer class="text-center py-12 px-4 text-gray-500 text-sm sm:text-base mt-12">
    <p>Engineering Notes Library &copy; 2026</p>
  </footer>
</body>
</html>
